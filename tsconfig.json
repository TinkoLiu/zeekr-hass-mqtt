{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "strict": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": false,
    "plugins": [
      {
        "name": "@rollup/plugin-typescript"
      }
    ]
  },
  "include": [
    "src/**/*",
    "eslint.config.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}